<div class="container">
    <div class="row sticky-top topRow">
        <div class="col">
            <a href="/home">
                <h1 class="headerText text-center">
                    farmShare!
                </h1>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5 class="subHeader text-center">
                What's currently available:
            </h5>
        </div>
    </div>
    {{#each posts}}
    <br>
    <div class="row justify-content-center">
        <div class="card col-10" style="">
            <div class="card-body">
                <h5 class="card-title text-center">{{this.quantity}} {{this.title}}</h5>
                <p class="card-text text-center">{{this.city}}, {{this.state}}</p>
                <p class="card-text text-center">{{this.date}}, {{this.startTime}}â€”{{this.endTime}}</p>
                <p class="card-text text-center">Instructions: {{this.instructions}}</p>
                <p class="card-text text-center">Posted by <b>{{this.postedBy.username}}</b></p>
                <div class="row">
                    <div class="col text-center">
                        <button type="button" class="btn btn-outline-success">
                            <a style="color: inherit; text-decoration:none"
                                href="mailto:{{this.postedBy.email}}">Contact</a>
                        </button>
                    </div>
                    <div class="col text-center">
                        <button type="button" class="btn btn-outline-secondary">
                            <a data-post="{{this.id}}" class="calendar-btn" data-toggle="button"
                                aria-pressed="false">Add to Calendar</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}

    <br>

    <div class="row justify-content-center">
        <div class="col-4 text-center">
            <a href="/home">
                <button type="button" class="btn btn-danger">Back to Nav</button>
            </a>
        </div>
    </div>
    <br><br>
    <footer>
        <div class="row footer">
            <div class="col-12">
                <p class="pFooter text-center sticky-bottom">Copyright 2019</a></p>
            </div>
        </div>
    </footer>
</div>

